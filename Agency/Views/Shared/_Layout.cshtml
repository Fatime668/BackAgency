<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">
    <!-- fontawesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body>
    <!-- header start -->
    <header>
        <nav>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-6 col-sm-6 col-md-3 col-lg-3">
                        <div class="nav-logo">
                            <h1>
                                <a href="#">@layoutService.GetDatas().Result.Settings.FirstOrDefault(s=>s.Key.Trim().ToLower()=="headerlogo").Value</a>
                            </h1>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-9 col-lg-9">
                        <div class="nav-menu">
                            <ul class="m-0 p-0 d-flex justify-content-end menu">
                                <li><a href="#">Services</a></li>
                                <li class="ms-5"><a href="#">Portfolio</a></li>
                                <li class="ms-5"><a href="#">About</a></li>
                                <li class="ms-5"><a href="#">Team</a></li>
                                <li class="ms-5 dropdown">
                                    <a href="#"><i class="fa-solid fa-user"></i></a>
                                    <ul class="downmenu m-0 p-0">
                                        <li><a href="#">Login</a></li>
                                        <li><a href="#">Register</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="bar">
                                <i class="fa-solid fa-bars"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="navbar">
            <div class="container">
                <ul>
                    <li><a href="#">Services</a></li>
                    <li class="my-3"><a href="#">Portfolio</a></li>
                    <li class="my-3"><a href="#">About</a></li>
                    <li class="my-3"><a href="#">Team</a></li>
                    <li class="my-3"><a href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </header>
    <!-- header end -->

    @RenderBody()
    <!-- footer start -->
    <footer>
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-sm-12 col-md-4 col-lg-4 justify-content-start">
                    <div class="copy">
                        <p>Copyright © All Rights Reserved</p>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4">
                    <div class="icon">
                        <ul class="d-flex m-0 p-0 justify-content-center">
                            <li><a href="#"><i class="@layoutService.GetDatas().Result.SocialMedias.FirstOrDefault(s=>s.Key.Trim().ToLower()=="twitter").Value"></i></a></li>
                            <li class="ms-3"><a href="#"><i class="@layoutService.GetDatas().Result.SocialMedias.FirstOrDefault(s=>s.Key.Trim().ToLower()=="facebook").Value"></i></a></li>
                            <li class="ms-3"><a href="#"><i class="@layoutService.GetDatas().Result.SocialMedias.FirstOrDefault(s=>s.Key.Trim().ToLower()=="linkedin").Value"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4">
                    <div class="pravcy">
                        <ul class="d-flex p-0 m-0 justify-content-end">
                            <li><a href="#">Privacy Policy</a></li>
                            <li class="ms-2"><a href="#">Terms of Use</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer end -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/script.js"></script>
</body>
</html>